<%= image_tag(@event.image, class: "mainpagePhoto") %>
<br>
<br>
<h1><%= @event.name %></h1>
<h2><%= @event.location %></h2>
<h2><%= @event.date %></h2>
<h3><%= number_to_currency @event.price %></h3>
<h6><%= @event.description %></h6>
<%= form_for @order_item do |f| %>
  <%= f.hidden_field :event_id, value: event.id %>
  <%= f.number_field :quantity %>
  <%= f.submit "Add to cart", :class => 'btn btn-basic' %>
<% end %>
<br>
<p><%= link_to "Return to events", events_path %></p>
<p><%= link_to "Edit", edit_event_path(@event) %></p>
<p><%= link_to "Delete", event_path(@event),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>
