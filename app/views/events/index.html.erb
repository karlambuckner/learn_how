<%= image_tag("wax.jpg", size: "1000x700", alt: "Knitting", class: "mainpagePhoto") %>
<br>
<br>

  <h1 class="center">Events</h1>
  <br>
  <br>
  <div class="row">
    <ul>
      <% @events.each do |event| %>
      <div class="col-md-3">
        <div class="card" style="width: 20rem;">
          <%= image_tag(event.image, class: "card-img-top") %>
          <li><%= link_to event.name, event_path(event), remote: true %></li>
          <li><%= event.location %></li>
          <li> <%= event.date %></li>
          <li><%= number_to_currency event.price %></li>
      <br>
      <%= form_for @order_item, remote: true do |f| %>
        <%= f.hidden_field :event_id, value: event.id %>
        <%= f.number_field :quantity %>
        <%= f.submit "Add to cart", :class => 'btn btn-basic' %>
        <br>
        <br>
        </div>
      </div>
      <br>
        <% end %>
      <% end %>
    </ul>
  </div>
<h3><%= link_to "Admin", new_event_path %></h3>
