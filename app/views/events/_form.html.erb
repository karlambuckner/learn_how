<%= render "layouts/errors", :object => @event %>

<%= form_for @event do |f| %>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :date %>
  <%= f.text_field :date %>
  <%= f.label :price%>
  <%= f.text_field :price %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit  %>
  <%= f.hidden_field(:user_id, :value => current_user.id) %><br>
<% end %>
